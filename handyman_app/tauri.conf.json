{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "home_repair_handyman",
  "version": "0.1.0",
  "identifier": "com.home-repair-handyman.app",
  "build": {
    "beforeDevCommand": "just dev-fe handyman_app",
    "devUrl": "http://localhost:5000",
    "beforeBuildCommand": "just build-fe handyman_app",
    "frontendDist": "../www/packages/handyman_app/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Handyman",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
